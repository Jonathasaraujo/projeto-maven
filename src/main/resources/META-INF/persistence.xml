<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
  <persistence-unit name="exemploJPAPU" transaction-type="RESOURCE_LOCAL">
    <class>com.projeto.domain.Professor</class>
    <class>com.projeto.domain.Curso</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="persistenceXmlLocation" value="classpath:META-INF/persistence.xml"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/sca_jpa"/>
      <property name="javax.persistence.jdbc.password" value="jpa"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="jpa"/>
      <property name="javax.persistence.schema-generation.database.action" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>